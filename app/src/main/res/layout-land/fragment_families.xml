<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGray"
    tools:context=".feature.createform.generalinfo.families.FamiliesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:background="@android:color/white">

            <com.cpu.quikdata.customviews.DividerText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                app:dividerText="@string/families_affected"/>

            <com.cpu.quikdata.customviews.questions.NumberQuestion
                android:id="@+id/familiesAffectedText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:textHint="@string/families_families" />

            <com.cpu.quikdata.customviews.questions.NumberQuestion
                android:id="@+id/householdsAffectedText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:textHint="@string/families_households" />

            <com.cpu.quikdata.customviews.DividerText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_columnSpan="2"
                app:dividerText="@string/families_displaced"/>

            <com.cpu.quikdata.customviews.questions.NumberQuestion
                android:id="@+id/familiesDisplacedText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:textHint="@string/families_families" />

            <com.cpu.quikdata.customviews.questions.NumberQuestion
                android:id="@+id/householdsDisplacedText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:textHint="@string/families_households" />

        </GridLayout>

    </ScrollView>

</LinearLayout>