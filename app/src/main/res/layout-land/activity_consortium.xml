<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_primary_bg"
    android:clipChildren="false"
    tools:context=".feature.consortium.ConsortiumActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/consortiumToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        app:contentInsetStart="0dp"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetEnd="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/toolbarTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:theme="@style/ToolbarTitleTheme"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                android:text="@string/consortium_title"/>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/consortiumFragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:background="@color/lighterGray">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="12">

            <ImageView
                android:id="@+id/consortiumPlanButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimenSmall"
                android:layout_columnWeight="3"
                android:layout_rowWeight="1"
                android:layout_columnSpan="3"
                android:src="@drawable/logo_plan"
                style="@style/ConsortiumImageViewTheme"/>

            <ImageView
                android:id="@+id/consortiumActionButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimenSmall"
                android:layout_columnWeight="3"
                android:layout_rowWeight="1"
                android:layout_columnSpan="3"
                android:src="@drawable/logo_action"
                style="@style/ConsortiumImageViewTheme"/>

            <ImageView
                android:id="@+id/consortiumCdrcButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimenSmall"
                android:layout_columnWeight="3"
                android:layout_rowWeight="1"
                android:layout_columnSpan="3"
                android:src="@drawable/logo_cdrc"
                style="@style/ConsortiumImageViewTheme"/>

            <ImageView
                android:id="@+id/consortiumCdacButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimenSmall"
                android:layout_columnWeight="3"
                android:layout_rowWeight="1"
                android:layout_columnSpan="3"
                android:src="@drawable/logo_cdac"
                style="@style/ConsortiumImageViewTheme"/>

            <ImageView
                android:id="@+id/consortiumStartButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimenLarge"
                android:layout_columnWeight="4"
                android:layout_rowWeight="1"
                android:layout_columnSpan="4"
                android:src="@drawable/logo_start"
                style="@style/ConsortiumImageViewTheme"/>

            <ImageView
                android:id="@+id/consortiumUkaidButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimenLarge"
                android:layout_columnWeight="4"
                android:layout_rowWeight="1"
                android:layout_columnSpan="4"
                android:src="@drawable/logo_ukaid"
                android:padding="@dimen/dimenLarge"
                style="@style/ConsortiumImageViewTheme"/>

            <ImageView
                android:id="@+id/consortiumCareButton"
                android:layout_width="0dp"
                android:layout_height="@dimen/dimenLarge"
                android:layout_columnWeight="4"
                android:layout_rowWeight="1"
                android:layout_columnSpan="4"
                android:src="@drawable/logo_care"
                style="@style/ConsortiumImageViewTheme"/>

        </GridLayout>

    </FrameLayout>

</RelativeLayout>