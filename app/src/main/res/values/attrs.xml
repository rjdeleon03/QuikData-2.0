<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DividerText">
        <attr name="dividerText" format="string" />
    </declare-styleable>

    <declare-styleable name="SubdividerText" parent="DividerText">
        <attr name="dividerText" />
    </declare-styleable>

    <declare-styleable name="CollapsibleContainer">
        <attr name="headerText" format="string" />
        <attr name="collapsed" format="boolean" />
        <attr name="deletable" format="boolean" />
    </declare-styleable>

    <declare-styleable name="TextItem">
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="CustomRecyclerView" parent="TextItem">
        <attr name="text" />
    </declare-styleable>

    <declare-styleable name="ItemSection" parent="TextItem">
        <attr name="text" />
    </declare-styleable>

    <declare-styleable name="ItemSectionOptional" parent="ItemSection">
        <attr name="text" />
        <attr name="include" format="boolean" />
    </declare-styleable>

    <declare-styleable name="Question" parent="TextItem">
        <attr name="question" format="string" />
    </declare-styleable>

    <declare-styleable name="NumberQuestion" parent="Question">
        <attr name="question" />
        <attr name="text" />
    </declare-styleable>

    <declare-styleable name="BooleanQuestion" parent="Question">
        <attr name="question" />
        <attr name="yesText" format="string" />
        <attr name="noText" format="string" />
    </declare-styleable>

    <declare-styleable name="MultilineStringLongQuestion" parent="Question">
        <attr name="question" />
        <attr name="text" />
    </declare-styleable>

    <declare-styleable name="BooleanMultilineStringLongQuestion" parent="BooleanQuestion">
        <attr name="questionBoolean" format="string" />
        <attr name="questionString" format="string"/>
        <attr name="text" />
        <attr name="yesText" />
        <attr name="noText" />
    </declare-styleable>

    <declare-styleable name="ThreeChoiceMultilineStringLongQuestion" parent="Question">
        <attr name="questionChoice" format="string" />
        <attr name="questionString"/>
        <attr name="text" />
        <attr name="option1Text" format="string" />
        <attr name="option2Text" format="string" />
        <attr name="option3Text" format="string" />
    </declare-styleable>

    <declare-styleable name="MultipleChoiceQuestion" parent="ThreeChoiceMultilineStringLongQuestion">
        <attr name="questionChoice" />
        <attr name="columnCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="MultipleChoiceDropdownQuestion" parent="MultipleChoiceQuestion">
        <attr name="questionChoice" />
    </declare-styleable>

    <declare-styleable name="DateQuestion" parent="Question">
        <attr name="question" />
        <attr name="text" />
    </declare-styleable>

    <declare-styleable name="TwoNumbersQuestion" parent="Question">
        <attr name="question" />
        <attr name="textHint1" format="string" />
        <attr name="text1" format="string" />
        <attr name="textHint2" format="string" />
        <attr name="text2" format="string" />
    </declare-styleable>

</resources>