<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:fontFamily">@font/nunitosans_semibold</item>
    </style>

    <style name="ToolbarTitleTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/nunitosans_extrabold</item>
    </style>

    <style name="ToolbarSubtitleTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/nunitosans_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="BottomNavTitleTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewTheme">
        <item name="android:lineSpacingExtra">-16sp</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:paddingTop">@dimen/dimenExtraSmall</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextTheme.Layout" parent="EditTextTheme">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">-4dp</item>
        <item name="android:layout_marginStart">@dimen/dimenMid</item>
        <item name="android:layout_marginEnd">@dimen/dimenMid</item>
    </style>

    <style name="EditTextTheme.Hint">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="EditTextTheme.SingleLine" parent="EditTextTheme">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EditTextTheme.Number" parent="EditTextTheme.SingleLine">
        <item name="android:inputType">number</item>
    </style>

    <style name="SelectableItemTheme">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="RadioButtonStyle" parent="AppTheme">
        <item name="colorControlNormal">?android:attr/textColorHint</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">?android:attr/textColorHint</item>
    </style>

    <style name="RecyclerViewTheme">
        <item name="android:paddingBottom">@dimen/dimenMid</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@color/lightGray</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
