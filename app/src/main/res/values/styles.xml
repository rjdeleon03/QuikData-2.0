<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/biryani_regular</item>
    </style>

    <style name="ToolbarTitleTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/biryani_bold</item>
    </style>

    <style name="ToolbarSubtitleTheme" parent="AppTheme">
        <item name="android:fontFamily">@font/biryani_demibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavTitleTextAppearance">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="EditTextTheme">
        <item name="android:paddingTop">@dimen/dimenExtraSmall</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditTextTheme.Number" parent="EditTextTheme">
        <item name="android:inputType">number</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
