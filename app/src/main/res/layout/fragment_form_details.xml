<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".feature.createform.formdetails.FormDetailsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenLarge"
        android:background="@color/colorPrimary">

        <com.rd.PageIndicatorView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:piv_viewPager="@id/formDetailsViewPager"
            app:piv_interactiveAnimation="true"
            app:piv_animationType="swap"
            android:elevation="0dp"/>

    </FrameLayout>

    <include layout="@layout/view_appbarlayout" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/formDetailsViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>