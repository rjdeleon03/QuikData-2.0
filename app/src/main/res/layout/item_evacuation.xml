<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/ripple_accent_white">

    <ImageButton
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="@dimen/dimenSmall"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/actionBarItemBackground"
        android:src="@drawable/ic_close_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimenMid"
        android:layout_marginEnd="@dimen/dimenMid"
        android:layout_marginTop="@dimen/dimenSmall"
        android:layout_marginBottom="@dimen/dimenSmall"
        android:orientation="vertical">

        <TextView
            android:id="@+id/evacuationItemNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_unnamed_evacuation"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/evacuationItemDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenExtraSmall"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/evacuationItemLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenExtraSmall"
            android:text="@string/text_unknown"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <include layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>