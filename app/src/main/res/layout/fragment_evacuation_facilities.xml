<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".feature.createform.evacuationinfo.evacuationfacilities.EvacuationFacilitiesFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.NumberQuestion
                android:id="@+id/evacuationFacilitiesCapacityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/evacuation_facilities_capacity"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationFacilitiesToiletsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_facilities_toilets"
                app:questionString="@string/evacuation_facilities_toilets_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationFacilitiesWideEntranceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_facilities_wide_entrance"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationFacilitiesElectricityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_facilities_electricity"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationFacilitiesWaterSupplyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_facilities_water_supply"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationFacilitiesVentilationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_facilities_ventilation"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>