<?xml version="1.0" encoding="utf-8"?>
<com.cpu.quikdata.customviews.CollapsibleContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:collapsed="true">

    <com.cpu.quikdata.customviews.questions.TwoNumbersQuestion
        android:id="@+id/populationAffectedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isReadOnly="true"
        app:question="@string/population_affected"
        app:textHint1="@string/text_male"
        app:textHint2="@string/text_female"/>

    <com.cpu.quikdata.customviews.questions.TwoNumbersQuestion
        android:id="@+id/populationDisplacedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isReadOnly="true"
        app:question="@string/population_displaced"
        app:textHint1="@string/text_male"
        app:textHint2="@string/text_female"/>

</com.cpu.quikdata.customviews.CollapsibleContainer>