<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".feature.createform.evacuationinfo.evacuationwash.EvacuationWashFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationWashFoodPreparationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_wash_food_preparation"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationWashWaterSourceText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_wash_water_source"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationWashToiletBathsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_wash_toilet_baths"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationWashGarbageDisposalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_wash_garbage_disposal"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationWashClinicText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_wash_clinic"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationWashSickText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_wash_sick"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/evacuationWashHandWashingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/evacuation_wash_hand_washing"
                app:questionString="@string/text_remarks"/>

            <include layout="@layout/view_divider_extra_large"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>