<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:gravity="center"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/ripple_accent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimenMidLarge"
        android:background="@drawable/ripple_accent">

        <TextView
            android:id="@+id/formItemNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:fontFamily="@font/nunitosans_bold"
            android:textAllCaps="true"
            android:text="@string/text_form_item"/>

        <ImageButton
            android:id="@+id/formDeleteButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="@dimen/dimenSmall"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="?attr/actionBarItemBackground"
            android:src="@drawable/ic_close_24dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimenMid"
        android:background="@android:color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/formItemDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorHint"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/formItemLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenExtraSmall"
            android:textColor="?android:attr/textColorHint"
            android:text="@string/text_unknown"
            android:maxLines="1"
            android:ellipsize="end"/>

    </LinearLayout>

    <include layout="@layout/view_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"/>

</LinearLayout>