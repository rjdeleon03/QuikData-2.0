<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lightGray"
    tools:context=".feature.createform.foodsecurityinfo.foodsecurityimpact.FoodSecurityImpactFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <com.cpu.quikdata.customviews.DividerText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerText="@string/food_security_impact_effect"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodAvailabilityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/food_security_impact_food_availability"
                app:questionString="@string/text_remarks"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodAccessText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/food_security_impact_food_access"
                app:questionString="@string/text_remarks"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodConstraintsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/food_security_impact_food_constraints"
                app:questionString="@string/text_remarks"/>

            <com.cpu.quikdata.customviews.questions.BooleanMultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodSourcesText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:questionBoolean="@string/food_security_impact_food_sources"
                app:questionString="@string/text_remarks"/>

            <com.cpu.quikdata.customviews.DividerText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerText="@string/text_before_emergency"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactEatingTimesBeforeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/food_security_impact_eating_times"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodNeedsBeforeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/food_security_impact_food_needs"/>

            <com.cpu.quikdata.customviews.DividerText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerText="@string/text_after_emergency"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactEatingTimesAfterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/food_security_impact_eating_times"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodNeedsAfterText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/food_security_impact_food_needs"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodProductionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/food_security_impact_food_production"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/foodSecurityImpactFoodRationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/food_security_impact_food_ration"/>

            <include layout="@layout/view_divider_extra_large"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>