<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightGray"
    tools:context=".feature.createform.evacuationinfo.evacuationcoping.EvacuationCopingFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightGray">

        <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
            android:id="@+id/evacuationCopingMechanismText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimenMid"
            android:layout_marginBottom="@dimen/dimenMid"
            app:question="@string/evacuation_coping_mechanism"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>