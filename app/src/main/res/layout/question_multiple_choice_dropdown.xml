<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/questionChoiceText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimenMid"
        android:layout_marginEnd="@dimen/dimenMid"
        android:layout_marginTop="@dimen/dimenExtraSmall"
        android:textColor="?android:attr/textColorHint"/>

    <Spinner
        android:id="@+id/questionChoiceSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimenMid"
        android:layout_marginEnd="@dimen/dimenMid"
        android:layout_marginTop="@dimen/dimenExtraSmall"
        android:layout_marginBottom="@dimen/dimenExtraSmall" />

    <include layout="@layout/view_divider"/>

</merge>