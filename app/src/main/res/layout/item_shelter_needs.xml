<?xml version="1.0" encoding="utf-8"?>
<com.cpu.quikdata.customviews.CollapsibleContainer
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:collapsed="true">

    <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
        android:id="@+id/shelterNeedsSpecificItemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:question="@string/shelter_needs_specific_items"/>

    <com.cpu.quikdata.customviews.questions.NumberQuestion
        android:id="@+id/shelterNeedsFamiliesInNeedText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:question="@string/shelter_needs_families_in_need"/>

</com.cpu.quikdata.customviews.CollapsibleContainer>