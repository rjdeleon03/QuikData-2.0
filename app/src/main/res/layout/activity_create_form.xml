<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.createform.CreateFormActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/createFormToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            app:contentInsetEnd="@dimen/dimenSuperExtraLarge">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/toolbarTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-8dp"
                    android:theme="@style/ToolbarTitleTheme"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"
                    android:text="@string/create_form_title_new"/>

                <TextView
                    android:id="@+id/toolbarSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:theme="@style/ToolbarSubtitleTheme"
                    android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
                    android:visibility="gone"/>

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="@dimen/dimenExtraLarge"
            android:layout_height="@dimen/dimenExtraLarge"
            android:layout_margin="@dimen/dimenMid"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/ic_check_24dp"
            app:tooltipText="@string/create_form_save"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="3">

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/form_details_title"/>

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:background="@color/lightGray"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/gen_info_title"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/shelter_nonfood_title"/>

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:background="@color/lightGray"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/food_security_title"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/livelihoods_title"/>

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:background="@color/lightGray"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/health_title"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/water_sanitation_title"/>

            <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:background="@color/lightGray"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:text="@string/evacuation_title"/>

            <com.cpu.quikdata.customviews.ItemSection
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_columnSpan="3"
                app:text="@string/case_stories_title"/>

        </GridLayout>

    </RelativeLayout>

</LinearLayout>