<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGray"
    tools:context=".feature.createform.healthinfo.healthgaps.HealthGapsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white">

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/healthGapsNearestHospitalText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/health_gaps_nearest_hospital"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/healthGapsServicesAvailableText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/health_gaps_services_available"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/healthGapsServicesAccessibleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/health_gaps_services_accessible"/>

            <include layout="@layout/view_divider_extra_large"/>

            <com.cpu.quikdata.customviews.questions.MultilineStringLongQuestion
                android:id="@+id/healthGapsReproductiveHealthText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:textHint="@string/health_gaps_reproductive_health"/>

            <include layout="@layout/view_divider_extra_large"/>

        </LinearLayout>

    </ScrollView>

</FrameLayout>