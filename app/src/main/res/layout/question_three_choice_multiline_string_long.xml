<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/dimenMid"
        android:layout_marginEnd="@dimen/dimenMid"
        android:layout_marginTop="@dimen/dimenExtraSmall"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/questionChoiceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?android:attr/textColorHint"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:theme="@style/RadioButtonStyle">

            <ImageView
                android:id="@+id/radioInfoButton"
                android:layout_width="24dp"
                android:layout_gravity="center"
                android:layout_height="24dp"
                android:src="@drawable/ic_info_outline_24dp"/>

            <androidx.appcompat.widget.AppCompatRadioButton
                android:id="@+id/radioOption1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_level1"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginStart="@dimen/dimenSmall"/>

            <RadioButton
                android:id="@+id/radioOption2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_level2"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginStart="@dimen/dimenMid"/>

            <RadioButton
                android:id="@+id/radioOption3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_level3"
                android:textColor="?android:attr/textColorHint"
                android:layout_marginStart="@dimen/dimenMid"/>

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/questionStringText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimenMid"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimenExtraSmall"
            android:layout_marginStart="@dimen/dimenMid"
            android:layout_marginEnd="@dimen/dimenMid"
            android:textColor="?android:attr/textColorHint"/>

        <EditText
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/dimenMid"
            android:paddingTop="0dp"
            android:layout_marginBottom="@dimen/dimenSmall"
            android:layout_marginStart="@dimen/dimenMid"
            android:layout_marginEnd="@dimen/dimenMid"
            style="@style/EditTextTheme"/>

    </LinearLayout>

    <include layout="@layout/view_divider"/>

</merge>